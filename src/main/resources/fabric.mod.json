{
  "schemaVersion": 1,
  "id": "polyconfig",
  "version": "${version}",

  "name": "polyconfig",
  "description": "Mod to conveniently access the PolyMc api via a config file",
  "authors": [
    {
      "name": "TheEpicBlock",
      "contact": { "homepage": "https://theepicblock.nl" }
    }
  ],
  "contact": {
    "homepage": "https://github.com/TheEpicBlock/PolyConfig/blob/master/README.md",
    "sources": "https://github.com/TheEpicBlock/PolyConfig"
  },

  "license": "CC0-1.0",
  "icon": "assets/polyconfig/icon.png",

  "environment": "*",
  "entrypoints": {
    "polymc": [
      "nl.theepicblock.polyconfig.PolyConfig"
    ]
  },
  "mixins": [
    "polyconfig.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "java": ">=17",
    "polymc": ">=5.2.3"
  }
}
